@model IEnumerable<Patient_Systems.Models.Results>

@{
    ViewBag.Title = "Index";
}

<h2>Result's</h2>

<p>
    <button style="border-radius:10px;background-color:blueviolet;height:40px;width:260px;">@Html.ActionLink("Print Information PDF", "Print", null, new { @style = "Color:black;font-weight:bold;font-size:20px" })</button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.patient_data.Full_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Medical_Test)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Check)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.The_Type_Of_Disease)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.patient_data.Full_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Medical_Test)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Check)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Notes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.The_Type_Of_Disease)
        </td>
      
    </tr>
}

</table>
